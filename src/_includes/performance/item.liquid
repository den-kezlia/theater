<article class="performance">
    {% include performance/item_card.liquid %}

    <div class="performance__description">
        <p>{{ description }}</p>

        <ul>
            {% for event in events %}
                <li>
                    <time class="archive__year" datetime="{{ event.date | date: "%d.%m.%Y" }}">{{ event.date | date: "%d.%m.%Y" }}</time>
                    <a href="events/{{ event.dateShort }}" class="button performance__order__link">
                        Выбрать Билет
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</article>